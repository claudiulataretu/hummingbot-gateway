{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "allowedSlippage": { "type": "string" },
    "gasLimitEstimate": { "type": "integer" },
    "ttl": { "type": "integer" },
    "maximumHops": { "type": "integer" },
    "useRouter": { "type": "boolean" },
    "routerAbi": { "type": "string" },
    "pairAbi": { "type": "string" },
    "contractAddresses": {
      "type": "object",
      "patternProperties": {
        "^\\w+$": {
          "type": "object",
          "properties": {
            "routerAddress": { "type": "string" }
          },
          "required": [
            "routerAddress"
          ],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": [
    "allowedSlippage",
    "gasLimitEstimate",
    "ttl",
    "maximumHops",
    "useRouter",
    "routerAbi",
    "pairAbi"
  ]
}
