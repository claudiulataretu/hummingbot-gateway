  "properties": {
    "certificatePath": { "type": "string" },
    "logPath": { "type": "string" },
    "port": { "type": "integer" },
    "docsPort": { "type": "integer" },
    "ipWhitelist": { "type": "array" },
    "GMTOffset": { "type": "number" },
    "logToStdOut": { "type": "boolean" },
